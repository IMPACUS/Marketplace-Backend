  <!-- brand 생성 -->
  <changeSet author="lchy0413" id="changelog-0.05.01-240713">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="brand"/>
      </not>
    </preConditions>

    <createTable tableName="brand">
      <column autoIncrement="true" name="brand_id" type="BIGINT">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="introduction" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="seller_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="opening_time" type="TIME">
        <constraints nullable="false"/>
      </column>
      <column name="closing_time" type="TIME">
        <constraints nullable="false"/>
      </column>
      <column name="business_day" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="breaking_time" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>

      <column name="create_at" type="TIMESTAMP">
      </column>
      <column name="modify_at" type="TIMESTAMP">
      </column>
      <column name="register_id" type="VARCHAR(255)">
      </column>
      <column name="modify_id" type="VARCHAR(255)">
      </column>
    </createTable>

    <setColumnRemarks columnName="introduction" remarks="쇼핑몰 소개" tableName="brand"/>
    <setColumnRemarks columnName="opening_time" remarks="영업 시작 시간" tableName="brand"/>
    <setColumnRemarks columnName="closing_time" remarks="영업 마무리 시간" tableName="brand"/>
    <setColumnRemarks columnName="business_day" remarks="영업 일자" tableName="brand"/>
    <setColumnRemarks columnName="breaking_time" remarks="점심 시간" tableName="brand"/>
  </changeSet>

