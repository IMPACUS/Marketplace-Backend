            <not>
                <tableExists tableName="green_label_point_allocation"/>
            </not>
        </preConditions>
        <createTable tableName="green_label_point_allocation">
            <column name="green_label_point_allocation_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="point_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="point_status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="remain_point" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="allocated_point" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="expired_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_expired_at" type="TIMESTAMP"/>

            <column name="create_at" type="TIMESTAMP">
            </column>
            <column name="modify_at" type="TIMESTAMP">
            </column>
            <column name="register_id" type="VARCHAR(255)">
            </column>
            <column name="modify_id" type="VARCHAR(255)">
            </column>
        </createTable>

        <setColumnRemarks tableName="green_label_point_allocation" columnName="remain_point"
                          remarks="남은 포인트"/>
        <setColumnRemarks tableName="green_label_point_allocation" columnName="allocated_point"
                          remarks="지급 포인트"/>
    </changeSet>
    <changeSet id="changelog-0.08.07-240729-lchy" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="green_label_point_history"/>
            </not>
        </preConditions>
        <createTable tableName="green_label_point_history">
            <column name="green_label_point_history_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="point_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="point_status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="trade_amount" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="unapplied_point" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="level_point" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="green_label_point" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="dtype" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="BIGINT"/>

            <column name="create_at" type="TIMESTAMP">
            </column>
            <column name="modify_at" type="TIMESTAMP">
            </column>
            <column name="register_id" type="VARCHAR(255)">
            </column>
            <column name="modify_id" type="VARCHAR(255)">
            </column>
        </createTable>

        <setColumnRemarks tableName="green_label_point_history" columnName="unapplied_point"
                          remarks="미적용 포인트"/>
        <setColumnRemarks tableName="green_label_point_history" columnName="level_point"
                          remarks="레벨 포인트 (해당 시점 기준)"/>
        <setColumnRemarks tableName="green_label_point_history" columnName="green_label_point"
                          remarks="그린 라벨 포인트 (해당 시점 기준)"/>
    </changeSet>
    <changeSet id="changelog-0.08.08-240729" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="green_label_point_history_relation"/>
            </not>
        </preConditions>
        <createTable tableName="green_label_point_history_relation">
            <column name="green_label_point_history_relation_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="green_label_point_allocation_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="green_label_point_history_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="previous_expired_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="create_at" type="TIMESTAMP">
            </column>
            <column name="modify_at" type="TIMESTAMP">
            </column>
            <column name="register_id" type="VARCHAR(255)">
            </column>
            <column name="modify_id" type="VARCHAR(255)">
            </column>
        </createTable>
    </changeSet>

    <!-- shard_link 관련 생성 -->
    <changeSet id="changelog-0.08.09-240729" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="shared_link"/>
            </not>
        </preConditions>
        <createTable tableName="shared_link">
            <column name="shared_link_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="shared_user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="create_at" type="TIMESTAMP">
            </column>
            <column name="modify_at" type="TIMESTAMP">
            </column>
            <column name="register_id" type="VARCHAR(255)">
            </column>
            <column name="modify_id" type="VARCHAR(255)">
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>