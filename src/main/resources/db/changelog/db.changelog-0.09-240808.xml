            </column>
            <column name="type" type="VARCHAR(255)">
            </column>
            <column name="special_delivery_fee" type="INT">
            </column>
            <column name="special_refund_fee" type="INT">
            </column>
            <column name="delivery_fee_type" type="VARCHAR(255)" defaultValue="'CHARGE_UNDER_30000'">
            </column>
            <column name="refund_fee_type" type="VARCHAR(255)" defaultValue="'CHARGE_UNDER_30000'">
            </column>
            <column name="description" type="TEXT">
            </column>
            <column name="delivery_company" type="VARCHAR(255)" />
            <column name="product_images" type="TEXT"/>
            <column name="create_at" type="TIMESTAMP" />
            <column name="modify_at" type="TIMESTAMP">
            </column>
            <column name="register_id" type="VARCHAR(255)">
            </column>
            <column name="modify_id" type="VARCHAR(255)">
            </column>
            <column name="sales_charge_percent" type="INT"/>
            <column name="bundle_delivery_option" type="VARCHAR(255)"/>
            <column name="bundle_delivery_group_id" type="BIGINT"/>
            <column name="is_custom_product" type="BOOLEAN" defaultValue="false"/>
        </createTable>

        <!-- Adding column remarks -->
        <setColumnRemarks tableName="temporary_product" columnName="temporary_product_id"
                          remarks="임시 상품 정보 ID"/>
