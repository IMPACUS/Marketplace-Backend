        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="temporary_product"/>
            </not>
        </preConditions>
        <createTable tableName="temporary_product">
            <column name="temporary_product_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)"/>
            <column name="delivery_type" type="VARCHAR(255)">
            </column>
            <column name="category_id" type="BIGINT"/>
            <column name="delivery_fee" type="INT"/>
            <column name="refund_fee" type="INT"/>
            <column name="market_price" type="INT"/>
            <column name="app_sales_price" type="INT"/>
            <column name="discount_price" type="INT"/>
            <column name="weight" type="INT"/>
