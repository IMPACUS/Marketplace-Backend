<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- issued_coupon 생성 -->
    <changeSet id="changelog-0.11.01-240808" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="issued_coupon"/>
            </not>
        </preConditions>
        <createTable tableName="issued_coupon">
            <column name="issued_coupon_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="coupon_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="lock" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="available_download_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="is_download" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="download_at" type="TIMESTAMP"/>
            <column name="is_used" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="used_at" type="TIMESTAMP"/>
            <column name="expired_at" type="TIMESTAMP"/>

            <column name="create_at" type="TIMESTAMP"/>
            <column name="modify_at" type="TIMESTAMP"/>
            <column name="register_id" type="VARCHAR(255)"/>
            <column name="modify_id" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <!-- issued_coupon_history 생성 -->
    <changeSet id="changelog-0.11.02-240808" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="issued_coupon_history"/>
            </not>
        </preConditions>
        <createTable tableName="issued_coupon_history">
            <column name="issued_coupon_history_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="issued_coupon_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="trigger_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="issued_at" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="create_at" type="TIMESTAMP"/>
            <column name="modify_at" type="TIMESTAMP"/>
            <column name="register_id" type="VARCHAR(255)"/>
            <column name="modify_id" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <!-- issued_coupon_triggers 생성 -->
    <changeSet id="changelog-0.11.03-240808" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="issued_coupon_triggers"/>
            </not>
        </preConditions>
        <createTable tableName="issued_coupon_triggers">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="issued_coupon_history_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="trigger_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="create_at" type="TIMESTAMP"/>
            <column name="modify_at" type="TIMESTAMP"/>
            <column name="register_id" type="VARCHAR(255)"/>
            <column name="modify_id" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>