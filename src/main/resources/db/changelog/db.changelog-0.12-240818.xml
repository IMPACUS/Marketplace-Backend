<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="lchy0413" id="changelog-0.12.01-240818">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="seller" columnName="charge_percent"/>
        </preConditions>
        <dropNotNullConstraint tableName="seller" columnName="charge_percent"/>
    </changeSet>

    <changeSet author="lchy0413" id="changelog-0.12.02-240818">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="user_info" columnName="password"/>
        </preConditions>
        <dropNotNullConstraint tableName="user_info" columnName="password"/>
    </changeSet>

    <!-- product column 추가  -->
    <changeSet author="lchy0413" id="changelog-0.12.03-240818">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="product_info" columnName="product_images"/>
            </not>
        </preConditions>
        <addColumn tableName="product_info">
            <column name="product_images" type="TEXT"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>