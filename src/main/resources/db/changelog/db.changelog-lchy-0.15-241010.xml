<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="changelog-0.15.01-24-09-24" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="base_info"/>
            </not>
        </preConditions>
        <createTable tableName="base_info">
            <column name="base_info_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="info_type" type="VARCHAR(255)">
                <constraints unique="true" nullable="true"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="detail" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="create_at" type="TIMESTAMP"/>
            <column name="modify_at" type="TIMESTAMP"/>
            <column name="register_id" type="VARCHAR(255)"/>
            <column name="modify_id" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="changelog-0.15.02-24-09-24-lchy" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="green_label_point_history" columnName="dtype"/>
                <columnExists tableName="green_label_point_history" columnName="order_id"/>
            </not>
        </preConditions>
        <addColumn tableName="green_label_point_history">
            <column name="dtype" type="VARCHAR(255)" defaultValue="COMMON">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="green_label_point_history">
            <column name="order_id" type="BIGINT"/>
        </addColumn>

    </changeSet>


</databaseChangeLog>