<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="changelog-lchy0.16.01-24-10-31" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="user_info" columnName="phone_number"/>
        </preConditions>
        <dropColumn tableName="user_info" columnName="phone_number"/>
    </changeSet>

    <changeSet id="changelog-lchy0.16.02-24-10-31" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="user_info" columnName="phone_number_prefix"/>
                <columnExists tableName="user_info" columnName="phone_number_suffix"/>
            </not>
        </preConditions>
        <addColumn tableName="user_info">
            <column name="phone_number_prefix" type="VARCHAR(255)" defaultValue="d36vIuoiIY3YCDxc5tjs+g=="/>
        </addColumn>
        <addColumn tableName="user_info">
            <column name="phone_number_suffix" type="VARCHAR(255)" defaultValue="0000"/>
        </addColumn>
    </changeSet>

    <changeSet id="changelog-lchy0.16.03-24-11-12" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="product_history" columnName="product_id"/>
            <not>
                <indexExists indexName="idx_product_id" tableName="product_history"/>
            </not>
        </preConditions>

        <createIndex indexName="idx_product_id" tableName="product_history">
            <column name="product_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="changelog-lchy0.16.04-24-11-12" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="product_option_history" columnName="product_option_id"/>
            <not>
                <indexExists indexName="idx_product_option_id" tableName="product_option_history"/>
            </not>
        </preConditions>

        <createIndex indexName="idx_product_option_id" tableName="product_option_history">
            <column name="product_option_id"/>
        </createIndex>

    </changeSet>

    <changeSet id="changelog-lchy0.16.05-24-11-12" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="product_option" columnName="product_id"/>
            <not>
                <indexExists indexName="idx_po_product_id" tableName="product_option"/>
            </not>
        </preConditions>

        <createIndex indexName="idx_po_product_id" tableName="product_option">
            <column name="product_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="changelog-lchy0.16.06-24-11-12" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="product_info" columnName="seller_id"/>
            <not>
                <indexExists indexName="idx_p_seller_id" tableName="product_info"/>
            </not>
        </preConditions>

        <createIndex indexName="idx_p_seller_id" tableName="product_info">
            <column name="seller_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="changelog-lchy0.16.07-24-11-20" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="consumer"/>
            </not>
        </preConditions>

        <createTable tableName="consumer">
            <column name="consumer_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints unique="true" nullable="true"/>
            </column>
            <column name="ci" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="create_at" type="TIMESTAMP"/>
            <column name="modify_at" type="TIMESTAMP"/>
            <column name="register_id" type="VARCHAR(255)"/>
            <column name="modify_id" type="VARCHAR(255)"/>
        </createTable>

    </changeSet>

</databaseChangeLog>