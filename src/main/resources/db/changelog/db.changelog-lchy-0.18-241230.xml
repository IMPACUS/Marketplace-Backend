<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="changelog-lchy-0.18.01-24-12-30" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="review_reply"/>
            </not>
        </preConditions>

        <createTable tableName="review_reply">
            <column name="review_reply_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="review_id" type="BIGINT">
                <constraints  nullable="false" unique="true"/>
            </column>
            <column name="contents" type="TEXT">
                <constraints nullable="true"/>
            </column>

            <column name="create_at" type="TIMESTAMP"/>
            <column name="modify_at" type="TIMESTAMP"/>
            <column name="register_id" type="VARCHAR(255)"/>
            <column name="modify_id" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>