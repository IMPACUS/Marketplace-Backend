<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="changelog-lchy-0.20.01-25-03-17" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="consumer_daily_visitors"/>
            </not>
        </preConditions>

        <createTable tableName="consumer_daily_visitors">
            <column name="consumer_daily_visitors_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="visitors" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="changelog-lchy-0.20.02-25-03-17" author="lchy0413">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="consumer_hourly_visitors"/>
            </not>
        </preConditions>

        <createTable tableName="consumer_hourly_visitors">
            <column name="consumer_hourly_visitors_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="hour" type="INT">
                <constraints nullable="false" />
            </column>
            <column name="visitors" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>